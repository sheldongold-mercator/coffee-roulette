# Coffee Roulette Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# General
# ============================================
NODE_ENV=development
FRONTEND_PORT=80
BACKEND_PORT=3000

# ============================================
# Database Configuration
# ============================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=coffee_roulette
DB_USER=app_user
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your_jwt_secret_key_change_this
JWT_EXPIRES_IN=7d

# ============================================
# Microsoft Azure AD / OAuth
# ============================================
# Create an app registration in Azure AD portal
# https://portal.azure.com -> Azure Active Directory -> App registrations
MICROSOFT_CLIENT_ID=your_client_id_here
MICROSOFT_CLIENT_SECRET=your_client_secret_here
MICROSOFT_TENANT_ID=your_tenant_id_here
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/auth/microsoft/callback

# ============================================
# Frontend Configuration
# ============================================
REACT_APP_API_URL=http://localhost:3000
REACT_APP_MSAL_REDIRECT_URI=http://localhost/auth/callback

# ============================================
# AWS Configuration (for Email via SES)
# ============================================
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
EMAIL_FROM=noreply@your-company.com

# ============================================
# Microsoft Teams Integration (Optional)
# ============================================
# Create an incoming webhook in your Teams channel
# Teams -> Channel -> Connectors -> Incoming Webhook
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/...
